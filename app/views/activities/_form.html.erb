<%= form_with(model: activity, local: true, class: 'form-horizontal') do |form| %>
  <% if activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(activity.errors.count, "error") %> prohibited this activity from being saved:</h2>

      <ul>
      <% activity.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="col-sm-2 control-label">Descrição</label>
    <div class="col-sm-10">
      <%= form.text_field :description, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Ação</label>
    <div class="col-sm-10">
      <%= form.text_field :action, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">isMenu</label>
    <div class="col-sm-10" style="padding-top:5px;">
      <%= check_box("activity", "isMenu") %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Icon</label>
    <div class="col-sm-10" style="padding-top:5px;">
      <%= form.text_field :icon, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Ordem</label>
    <div class="col-sm-10" style="padding-top:5px;">
      <%= form.text_field :order, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Menu Pai</label>
    <div class="col-sm-10">
      <%= collection_select(:activity, :activity_id, @options_for_select_parent, :id, :description, {:include_blank => 'Selecione'}, {:class => 'form-control'} ) %>
    </div>
  </div>

  <div class="hr-line-dashed"></div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2" style="margin-left: 90%;">

        <a href="/activities">
        <button class= "btn btn-danger" type="button">
          <i class="fa fa-times">
          </i>
          </button>
        </a>
        <button class= "btn btn-primary" type="submit">
          <i class="fa fa-check">
          </i>
          </button>

    </div>
  </div>
<% end %>
