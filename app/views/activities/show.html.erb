<%= render 'header' %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Mostrando ação: <small><%= @activity.description %></small></h5>
        </div>
        <div class="ibox-content-scaffold">
            <form class="form-horizontal">
              <div class="form-group"><label class="col-sm-2 control-label">Descrição</label>
                <div class="col-sm-10">
                  <p style="color:#565555;" class="form-control-static">
                    <%= @activity.description %>
                  </p>
                </div>
              </div>
              <div class="form-group"><label class="col-sm-2 control-label">Ação</label>
                <div class="col-sm-10">
                  <p style="color:#565555;" class="form-control-static">
                    <%= @activity.action %>
                  </p>
                </div>
              </div>
              <div class="form-group"><label class="col-sm-2 control-label">É Menu</label>
                <div class="col-sm-10">
                  <p style="color:#565555;" class="form-control-static">
                    <%= handle_field_boolean(@activity.isMenu) %>
                  </p>
                </div>
              </div>
              <div class="form-group"><label class="col-sm-2 control-label">Menu Pai</label>
                <div class="col-sm-10">
                  <p style="color:#565555;" class="form-control-static">
                    <%= @activity.activity ? handle_field(@activity.activity.description) : "-" %>
                  </p>
                </div>
              </div>
              <div class="hr-line-dashed">
              </div>
              <div class="form-group">
                  <div class="col-sm-4">
                      <%= link_to 'Voltar', activities_path, :class => 'btn btn-white' %>
                      <%= link_to 'Editar', edit_activity_path(@activity), :class => "btn btn-primary" %>
                  </div>
              </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
