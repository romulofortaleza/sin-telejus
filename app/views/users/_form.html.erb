<%= form_with(model: user, local: true, class: 'form-horizontal') do |form| %>
    <div class="form-group <%= @user.errors[:username].any? ? 'has-error' : '' %>">
        <label class="col-sm-2 control-label">Matricula</label>
        <div class="col-sm-10">
            <%= form.text_field :username, class: 'form-control' , :required => true%>
            <% if @user.errors[:username].any? %>
                <span class="help-block m-b-none font-bold"><%= @user.errors[:username].first %></span>
            <% end %>
        </div>
    </div>
    <div class="form-group <%= @user.errors[:role_id].any? ? 'has-error' : '' %>">
        <label class="col-sm-2 control-label">Perfil</label>
        <div class="col-sm-10">
            <%= collection_select(:user, :role_id, @role_options_for_select, :id, :description, { :prompt => "Selecione um Perfil"}, {:class => 'form-control'} ) %>
            <% if @user.errors[:role_id].any? %>
                <span class="help-block m-b-none font-bold"><%= @user.errors[:role_id].first %></span>
            <% end %>
        </div>
    </div> 
    <div class="hr-line-dashed"></div>
    <div class="form-group">
        <div class="col-sm-4 col-sm-offset-2">
            <%= link_to 'Cancelar', users_url, :class => 'btn btn-white' %>     
            <%= form.submit 'Salvar', :class => 'btn btn-primary' %>
        </div>
    </div>
<% end %>