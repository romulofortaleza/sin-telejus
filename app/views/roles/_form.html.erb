<%= form_with(model: role, local: true, class: 'form-horizontal') do |form| %>
  <div class="form-group <%= @role.errors[:description].any? ? 'has-error' : '' %>">
    <label class="col-sm-2 control-label">Perfil</label>
    <div class="col-sm-10">
      <%= form.text_field :description, class: 'form-control' %>
      <% if @role.errors[:description].any? %>
          <span class="help-block m-b-none font-bold"><%= @role.errors[:description].first %></span>
      <% end %>
    </div>
  </div>

  <div class="hr-line-dashed"></div>
    <div class="form-group">
      <div class="col-sm-4 col-sm-offset-2">
          <%= link_to 'Cancelar', roles_path, :class => 'btn btn-white' %>     
          <%= form.submit 'Salvar', :class => 'btn btn-primary' %>
      </div>
  </div>
<% end %>