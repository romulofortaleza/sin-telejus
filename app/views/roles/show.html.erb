<p id="notice"><%= notice %></p>

<%= render 'header' %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Mostrando Perfil: <small><%= @role.description %></small></h5>
        </div>
        <div class="ibox-content-scaffold">
            <form class="form-horizontal">
              <div class="form-group"><label class="col-sm-2 control-label">Perfil</label>
                <div class="col-sm-10">
                  <p style="color:#565555;" class="form-control-static">
                    <%= @role.description %>
                  </p>
                </div>
              </div>
              <div class="hr-line-dashed">
              </div>                    
              <div class="form-group">
                  <div class="col-sm-4">
                      <%= link_to 'Voltar', roles_path, :class => 'btn btn-white' %>            
                      <%= link_to 'Editar', edit_role_path(@role), :class => "btn btn-primary" %>               
                  </div>
              </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>   

