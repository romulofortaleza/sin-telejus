<%= render 'header' %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Ações por Perfil</h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
          </div>
        </div>
        <div class="ibox-content-scaffold">
          <table class="table table-striped table-hover table-results">
            <thead>
              <tr>
                <th>Perfil</th>
                <th>Ação</th>
                <th class="col-sm-3">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @activity_roles.each do |activity_role| %>
                <tr>
                  <td><%= activity_role.role.description %></td>
                  <td><%= activity_role.activity.description %></td>
                  <td>
                    <%= link_to fa_icon('eye'), activity_role, class: 'btn btn-sm btn-success' %>
                    <%= link_to fa_icon('edit'), edit_activity_role_path(activity_role), class: 'btn btn-sm btn-warning' %>
                    <%= link_to fa_icon('trash'), activity_role, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
            <tfoot>
              <tr>
                <td><%= link_to fa_icon('plus'), new_activity_role_path, class: 'btn btn-md btn-primary' %></td>
                <td></td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<br>
