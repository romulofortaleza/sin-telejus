<%= render 'header' %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content-scaffold">
            <form class="form-horizontal">
              <div class="form-group"><label class="col-sm-2 control-label">Perfil</label>
                <div class="col-sm-10">
                  <p style="color:#565555;" class="form-control-static">
                    <%= @activity_role.role.description %>
                  </p>
                </div>
              </div>  
              <div class="form-group"><label class="col-sm-2 control-label">Ação</label>
                <div class="col-sm-10">
                  <p style="color:#565555;" class="form-control-static">
                    <%= @activity_role.activity.description %>
                  </p>
                </div>
              </div>                
              <div class="hr-line-dashed">
              </div>                    
              <div class="form-group">
                  <div class="col-sm-4">
                      <%= link_to 'Voltar', activity_roles_path, :class => 'btn btn-primary' %>                           
                  </div>
