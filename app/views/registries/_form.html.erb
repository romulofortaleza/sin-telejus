<%= form_with(model: registry, local: true, class: 'form-horizontal') do |form| %>
  <% if registry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(registry.errors.count, "error") %> prohibited this registry from being saved:</h2>

      <ul>
      <% registry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="col-sm-2 control-label">Código:</label>
    <div class="col-sm-10">
      <%= form.number_field :code, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Orgão:</label>
    <div class="col-sm-10">
      <%= form.text_field :organ, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Comarca:</label>
    <div class="col-sm-10">
      <%= form.text_field :county, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Última Atualização:</label>
    <div class="col-sm-10">
      <%= form.date_select :last_update, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Títular:</label>
    <div class="col-sm-10">
      <%= form.text_field :holder, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">E-mail:</label>
    <div class="col-sm-10">
      <%= form.text_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Endereço:</label>
    <div class="col-sm-10">
      <%= form.text_area :address, class: 'form-control' %>
    </div>
  </div>

   <div class="hr-line-dashed"></div>
  <div class="form-group">
      <div class="col-sm-4 col-sm-offset-2" style="margin-left: 90%;">

        <a href="/registries">
          <button class= "btn btn-danger" type="button">
            <i class="fa fa-times"></i>
          </button>
        </a>
        <button class= "btn btn-primary" type="submit">
          <i class="fa fa-check"></i>
        </button>

    </div>
  </div>
<% end %>