<%= form_with(model: room, local: true, class: 'form-horizontal') do |form| %>
  <% if room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
      <% room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="col-sm-2 control-label">Localização:</label>
    <div class="col-sm-10">
    <%= form.text_field :locate, class: 'form-control' %>
   </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Sala:</label>
    <div class="col-sm-10">
    <%= form.text_field :room, class: 'form-control' %>
   </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Última Atualização:</label>
    <div class="col-sm-10">
    <%= form.text_field :last_update, class: 'form-control' %>
   </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Telefone(s):</label>
    <div class="col-sm-10">
    <%= form.text_area :phones, class: 'form-control' %>
   </div>
  </div>

  <div class="hr-line-dashed"></div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2" style="margin-left: 90%;">

        <a href="/rooms">
        <button class= "btn btn-danger" type="button">
          <i class="fa fa-times">
          </i>
          </button>
        </a>
        <button class= "btn btn-primary" type="submit">
          <i class="fa fa-check">
          </i>
          </button>

    </div>
  </div>
<% end %>
